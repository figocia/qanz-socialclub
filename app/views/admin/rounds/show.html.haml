.game-admin
  %header
    %h3
      = raw "Game management for #{@round.name} of #{ link_to @competition.name, admin_competition_rounds_path(@competition)}"
  .row.add-game
    .col-sm-3
      = link_to 'Auto generate games for all teams',auto_create_games_path(round_id: @round.id), method: 'post', remote: true, class: 'btn btn-success'
    .col-sm-3
      = link_to 'Add single game', new_admin_game_path(round_id: @round.id), remote: true, class: 'btn btn-primary'
  .games-body
    = render @round.games
= render 'shared/dialog'